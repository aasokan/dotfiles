# colored grep
alias grepr='grep --color=auto'
export GREP_COLOR='1;33'
export BLOCKSIZE=1k
export EDITOR=vim
export MANPAGER="less -X"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

export CLICOLOR=1
# colored ls
export LSCOLORS='Gxfxcxdxdxegedabagacad'

# History
export HISTCONTROL=ignoredups:ignorespace
export HISTIGNORE="&:ls:mutt:[bf]g:exit:clear:fetchmail *:fetchmail"
export HISTFILESIZE=1000000
export HISTSIZE=1000000

# Screen Catpure
alias screencapture='screencapture -i -s'

# Less Alias
alias lessr='less -R'

# ls
# List directory contents
alias ls='ls -G'        # Compact view, show colors
alias lsah='ls -lah'       # Compact view, show hidden
alias ll='ls -al'
alias l='ls -a'

if [ $(uname) = "Linux" ]
then
  alias ls="ls --color=auto"
fi

# Reload
alias reload='source ~/.bash_profile'

# Quit
alias q='exit'

#Clear
alias c='clear'
alias cls='clear'

# cd
alias cdw='cd ~/work_repos/'
alias cdp='cd ~/private_repos/'
alias ..='cd ..'         # Go up one directory
alias -- -='cd -'        # Go back
alias ~~='cd ~'
alias ~w='cd ~/work_repos'
alias ~p='cd ~/private_repos'

# Shell History
alias h='history'

# Tree
if [ ! -x "$(which tree 2>/dev/null)" ]
then
  alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
fi

# Directory
alias md='mkdir -p'
alias rd='rmdir'
alias cpdir='cp -R'

# Editor
alias a='atom'
alias chrome="open -a google\ chrome"

# Force Remove
alias rforks='rm -f $(find . |grep "\._‚Äù)'
# Debug
alias dfh='df -h'
alias duh='du -h -x --max-depth=1 '
alias duf='du -sh *'
alias fd='find . -type d -name'
alias ff='find . -type f -name'

# Rsync
alias rsync-copy="rsync -avz --progress -h"
